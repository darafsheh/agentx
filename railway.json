{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "nixpacksPlan": {
        "phases": {
          "setup": {
            "cmds": ["npm install -g pnpm"]
          },
          "install": {
            "dependsOn": ["setup"],
            "cmds": ["pnpm install --no-frozen-lockfile"]
          },
          "build":{
            "dependsOn": ["install"],
            "cmds": ["pnpm build"]
          }
        }
      }
    },
    "deploy": {
        "workdir": "client",
        "startCommand": "start:client"
    }
  }