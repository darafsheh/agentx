{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "nixpacksPlan": {
        "phases": {
          "install": {
            "cmds": ["cd /app/client", "npm install -g corepack", "corepack enable", "corepack prepare pnpm@9.1.0 --activate", "pnpm install --no-frozen-lockfile"]
          },
          "build":{
            "dependsOn": ["install"],
            "cmds": ["cd /app/client", "pnpm build"]
          }
        }
      }
    },
    "deploy": {
        "startCommand": "cd /app/client && pnpm start:client"
    }
  }